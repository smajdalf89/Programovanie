#telocvikarske menu
import os
from tkinter import Tk, PhotoImage, Menu, Frame, Text, Scrollbar, IntVar, StringVar, END, simpledialog, ttk
import tkinter.filedialog
import tkinter.messagebox
import tkinter as tk
import webbrowser

PROGRAM_NAME = "Telocvikarsky program"

root=Tk()
root.geometry("800x600")
root.title(PROGRAM_NAME)
parent = tk.Frame(root)

NORM_FONT = ("Verdana", 12)

def popupmsg(msg):
    popup = tk.Tk()
    popup.wm_title("!")
    label = ttk.Label(popup, text=msg, font=NORM_FONT)
    label.pack(side="top", fill="x", pady=10)
    B1 = ttk.Button(popup, text="chlapec",command=popup.destroy )
    B2 = ttk.Button(popup, text="dievca", command=popup.destroy)
    B1.pack()
    B2.pack()
    popup.mainloop()


def hodmedicimbalom():
    meno = simpledialog.askstring("Vlozte meno", "prosim zadajte meno ziaka")
    hodmedicimbalom=[]
    y = simpledialog.askstring("Trieda", "Zadaj triedu")
    hodmedicimbalom.append(y)
    v = simpledialog.askfloat("Vysledok", "Zadaj vysledok vykonu")
    hodmedicimbalom.append(v)

    #zoznam[meno] = hodmedicimbalom



def exit_editor():
    if tkinter.messagebox.askokcancel("Zavrieť?", "Važne chceš isť preč?"):
        root.destroy()

def change_theme():
    selected_theme = theme_choice.get()
    fg_bg_colors = color_schemes.get(selected_theme)
    foreground_color, background_color = fg_bg_colors.split('.')
    content_text.config(
        background=background_color, fg=foreground_color)
def pomoc():
    tkinter.messagebox.showinfo("Pomoc", "{} {}".format(PROGRAM_NAME, "\nProgram vytvoreny na pomoc ucitelom TSV\n Vytvorene z dovodu zaverecnej prace"))

def ovyvojarovovi():
    tkinter.messagebox.showinfo("O vyvojarovovi", "{} {}".format(PROGRAM_NAME, "\n Mgr.Michal Palica\n email:michal.palica@gmail.com\n tel.c:0902 222 171"))
#menu
menu_bar = Menu(root)
file_menu = Menu(menu_bar, tearoff=0)
submenu = Menu(file_menu)
submenu1 = submenu
submenu.add_command(label='1. Hod medicimbalom', command=hodmedicimbalom)
submenu.add_command(label='2. Vydrž v zhybe-iba dievčata')
submenu.add_command(label='3. Zhyby - chlapci')
submenu.add_command(label='4. Člnkovy beh')
submenu.add_command(label='5. 100 metrov')
submenu.add_command(label='6. 1500 metrov')
submenu.add_command(label='7. 3000 metrov')
submenu.add_command(label='8. Hod granatom')
submenu.add_command(label='9. Skok do piesku')
submenu.add_command(label='10. Sed-ľah')
submenu.add_command(label='11. Veslovanie')
submenu.add_command(label='12. Kľuky')
submenu.add_command(label='13. Preskoky cez lavičku')
submenu.add_command(label='14. Skok do diaľky')
file_menu.add_cascade(label='Disciplina', menu=submenu, underline=0)



file_menu.add_command(label='Statistika',accelerator='Ctrl+S', compound='left', underline=0)

file_menu.add_command(label='Zobrazit hodnotenia',accelerator='Ctrl+Z', compound='left', underline=0)

file_menu.add_separator()
file_menu.add_command(label='Ulozit subor', accelerator='Ctrl+U', compound='left', underline=0,)
file_menu.add_separator()
file_menu.add_command(label='Exit', accelerator='Alt+F4', command=exit_editor)
menu_bar.add_cascade(label='Hlavne menu', menu=file_menu)

